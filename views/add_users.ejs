<%- include('layout/header') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-primary">
                        <h3 class="text-light">Добавьте нового пользователя</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/add" method="post" id="add-form">
                            <div class="mb-3">
                                <label for="name">Имя</label>
                                <input type="text" name="name" class="form-control form-control-lg"
                                    placeholder="Введите имя" required />
                            </div>
                            <div class="mb-3">
                                <label for="email">Email</label>
                                <input type="email" name="email" class="form-control form-control-lg"
                                    placeholder="Введите Email" required />
                            </div>
                            <div class="mb-3">
                                <label for="phone">Номер телефона</label>
                                <input type="tel" name="phone" class="form-control form-control-lg"
                                    placeholder="Введите номер телефона" required />
                            </div>
                            <div class="mb-3">
                                <label for="age">Возраст</label>
                                <input type="age" name="age" class="form-control form-control-lg"
                                    placeholder="Введите возраст" required />
                            </div>
                            <div class="mb-3">
                                <input type="submit" name="submit" value="Добавить" class="btn btn-primary btn-lg" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('layout/footer') %>
