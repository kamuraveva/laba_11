<%- include('layout/header') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-success">
                        <h3 class="text-light">Редактирование данных пользователя (<%= user.name %>)</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/update/<%= user._id %>" method="post" id="edit-form">
                            <div class="mb-3">
                                <label for="name">Имя</label>
                                <input type="text" name="name" class="form-control form-control-lg"
                                    placeholder="Введите имя" value="<%= user.name %>" required />
                            </div>
                            <div class="mb-3">
                                <label for="email">Email</label>
                                <input type="email" name="email" class="form-control form-control-lg"
                                    placeholder="Введите Email" value="<%= user.email %>" required />
                            </div>
                            <div class="mb-3">
                                <label for="phone">Номер телефона</label>
                                <input type="tel" name="phone" class="form-control form-control-lg"
                                    placeholder="Введите номер телефона" value="<%= user.phone %>" required />
                            </div>
                            <div class="mb-3">
                                <label for="age">Возраст</label>
                                <input type="age" name="age" class="form-control form-control-lg"
                                    placeholder="Введите возраст" value="<%= user.age %>" required />
                            </div>
                            <div class="mb-3">
                                <input type="submit" name="submit" value="Изменить" class="btn btn-success btn-lg" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('layout/footer') %>
